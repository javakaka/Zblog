<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
      "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zblog.core.dal.mapper.ValidateCodeMapper">
   
   <select id="loadById" parameterType="java.lang.String" resultType="ValidateCode">  
      select id, email, code, status, createTime, lastUpdate from blog_validate_code where id = #{id}
   </select>
   
   <select id="loadByEmail" resultType="ValidateCode">  
      select id, email, code, status, createTime, lastUpdate from blog_validate_code where email = #{email}  
   </select>
   
   <select id="list" parameterType="PageModel" resultType="ValidateCode">  
      select id, email, code, status, createTime, lastUpdate from blog_validate_code
   </select>
   
   <select id="count" resultType="long">
     select count(*) from blog_validate_code
   </select>
   
   <insert id="insert" parameterType="ValidateCode">
      insert into blog_validate_code (id,email,code,status,createTime,lastUpdate) 
         values(#{id},#{email},#{code},#{status},#{createTime},#{lastUpdate})
   </insert>
   
   <update id="update" parameterType="ValidateCode">
     update blog_validate_code set status=#{status},lastUpdate=#{lastUpdate}
     where id=#{id}
   </update>

   <delete id="deleteById">
	 delete from blog_validate_code where id = #{id}
  </delete>
	
</mapper>